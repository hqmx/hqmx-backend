# EC2 Express Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# File Upload Settings
MAX_FILE_SIZE=2621440000
# 2.5GB in bytes (2.5 * 1024 * 1024 * 1024)
# EC2는 request body 크기 제한이 없으므로 대용량 파일 처리 가능

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://converter.hqmx.net

# Queue Settings
MAX_QUEUE_SIZE=10

# File Cleanup Settings
CLEANUP_AGE_HOURS=1
# Files older than this will be deleted by cron job

# Temporary File Storage
UPLOAD_DIR=/tmp/converter/uploads
OUTPUT_DIR=/tmp/converter/outputs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
# 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=10
# Max requests per IP per window

# FFmpeg Configuration (optional - uses system ffmpeg by default)
# FFMPEG_PATH=/usr/bin/ffmpeg

# Logging
LOG_LEVEL=info
