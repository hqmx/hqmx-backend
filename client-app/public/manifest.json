  "shortcuts": [
    {
      "name": "이미지 변환",
      "short_name": "이미지",
      "description": "이미지 파일 변환하기",
      "url": "/?category=image",
      "icons": [
        {
          "src": "/assets/shortcut-image.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "비디오 변환",
      "short_name": "비디오", 
      "description": "비디오 파일 변환하기",
      "url": "/?category=video",
      "icons": [
        {
          "src": "/assets/shortcut-video.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "오디오 변환",
      "short_name": "오디오",
      "description": "오디오 파일 변환하기", 
      "url": "/?category=audio",
      "icons": [
        {
          "src": "/assets/shortcut-audio.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [
            "image/*",
            "video/*", 
            "audio/*",
            ".pdf",
            ".doc",
            ".docx",
            ".zip",
            ".rar"
          ]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/convert",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp", ".svg"],
        "video/*": [".mp4", ".avi", ".mov", ".mkv", ".webm", ".flv"],
        "audio/*": [".mp3", ".wav", ".flac", ".aac", ".ogg", ".m4a"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+hqmxconvert",
      "url": "/convert?url=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "prefer_related_applications": false,

  "lang": "ko-KR",

  "dir": "ltr",

  "scope": "/",

  "id": "/",

  "launch_handler": {
    "client_mode": "navigate-new"
  }
}